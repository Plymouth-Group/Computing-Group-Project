{{template "head.tmpl" .}}

<body>

	<div class="section-non-logged">
		<div class="form">
			<div class="title">Create New Password for <span class="bold">{{.ServerEmail}}</span> in {{.ServerCode}}</div>

			<div class="grid grid-center item-center">
				<div class="column-4">
					<div class="box">
						<form method="POST" action="/reset_new" enctype="application/x-www-form-urlencoded">
							<div class="grid">
								<div class="column-6">
									<div class="label">New Password</div>
								</div>
								<div class="column-6">
									<div class="label"><span class="right error">* Error Message</span></div>
								</div>
							</div>

							<input name="input_psw" type="password" placeholder="">

							<div class="grid">
								<div class="column-6">
									<div class="label">Confirm New Password</div>
								</div>
								<div class="column-6">
									<div class="label"><span class="right error">* Error Message</span></div>
								</div>
							</div>

							<input name="input_cnfpsw" type="password" placeholder="">

							<div class="grid grid-end">
								<button type="submit">Reset Password</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

		{{template "footer_form.tmpl" .}}
	</div>

	{{template "bottom.tmpl" .}}