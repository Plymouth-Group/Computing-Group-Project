{{template "head.tmpl" .}}

<body>

	<div class="section-non-logged">

		<div class="form">
			<div class="title">Reset Password</div>

			<div class="grid grid-center item-center">
				<div class="column-4">
					<div class="box">
						<form method="POST" action="/reset_password" enctype="application/x-www-form-urlencoded">
							<div class="grid">
								<div class="column-6">
									<div class="label">Server Code</div>
								</div>
								<div class="column-6">
									<div class="label"><span class="right error">{{.ServerError}}</span></div>
								</div>
							</div>

							<input name="input_scode" type="text" placeholder="">

							<div class="grid">
								<div class="column-6">
									<div class="label">Administrator Email Address</div>
								</div>
								<div class="column-6">
									<div class="label"><span class="right error">{{.EmailError}}</span></div>
								</div>
							</div>

							<input name="input_email" type="email" placeholder="">

							<div class="grid grid-end">
								<button type="submit">Send Instructions</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

		{{template "footer_form.tmpl" .}}
	</div>

	{{template "bottom.tmpl" .}}